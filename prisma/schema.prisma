generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  id             Int      @id @default(autoincrement())
  name           String
  category       String
  description    String
  price          Float
  stock_quantity Int
  create_at      DateTime
  update_at      DateTime

  @@map("products")
}

enum Status {
  Pendente
  Conclu√≠do
  Cancelado
}

model Orders {
  id        Int      @id @default(autoincrement())
  total     Float
  status    Status
  create_at DateTime
  update_at DateTime

  products ProductsOrders[]

  @@map("orders")
}

model ProductsOrders {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  unitPrice   Float
  quantity    Int
  total       Float
  create_at   DateTime
  update_at   DateTime

  order    Orders @relation(fields: [order_id], references: [id])
  order_id Int

  @@map("products_orders")
}
